<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/text_button"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="BOTÃ“N CON TEXTO"
            android:textColor="@color/darkblue"
            android:background="@drawable/text_button"
            tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/flat_button"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:drawableRight="@drawable/ic_business_center"
            android:drawablePadding="-25dp"
            app:layout_constraintTop_toBottomOf="@+id/text_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="PLANO CON IMAGEN"
            android:textColor="@color/white"
            android:background="@drawable/flat_button"
            />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/radius_button"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:text="ESQUINAS REDONDEADAS"
            android:textColor="@color/white"
            android:background="@drawable/radius_button"
            app:layout_constraintTop_toBottomOf="@+id/flat_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/border_button"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:text="CON BORDE"
            android:textColor="@color/pink"
            android:background="@drawable/border_button"
            app:layout_constraintTop_toBottomOf="@+id/radius_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gradient_button"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:text="CON GRADIENTE"
            android:textColor="@color/white"
            android:background="@drawable/gradient_button"
            app:layout_constraintTop_toBottomOf="@+id/border_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/silver_button"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:text="EFECTO PLATA"
            android:background="@drawable/silver_button"
            app:layout_constraintTop_toBottomOf="@+id/gradient_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/round_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:text="GO!"
            android:textColor="@color/white"
            android:background="@drawable/round_button"
            app:layout_constraintTop_toBottomOf="@+id/silver_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/shadow_button"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:text="EFECTO SOMBRA"
            android:textColor="@color/white"
            android:background="@drawable/shadow_button"
            app:layout_constraintTop_toBottomOf="@+id/round_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="64dp"
            app:layout_constraintHorizontal_bias="0.497" />
</androidx.constraintlayout.widget.ConstraintLayout>